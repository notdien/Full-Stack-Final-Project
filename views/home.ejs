<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome to your Movie List!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="css_files/home.css" rel="stylesheet" type="text/css">
    <link href="css_files/background.css" rel="stylesheet" type="text/css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <%- include('navbar') %>
    <style>
      .search-result {
        color: rgb(255, 255, 255);
      }
      .search-results-container {
      display: flex;
      flex-wrap: wrap;
    }

    .search-result-item {
      flex: 1;
      min-width: 200px;
      padding: 10px;
      box-sizing: border-box;
    }
    </style>
</head>
<body>
            <form class="top-form" action="/search" method="POST">
              <div class ="whole-box">
                <input class="box-child-1" type="text" name="query" id="query" placeholder ="Search for a Movie!" required>
                <select class="box-child-2" name="mediaType" id="mediaType" required>
                  <option aria-placeholder="Choose a media type"></option>
                  <option value="movie">Movie</option>
                  <option value="tv">TV Show</option>
                </select>
              </div>
              <br>
              <br>
              <button class="search-btn" type="submit">Search</button>
            </form>

            <% if (typeof searchResults !== 'undefined') { %>
              <div class="search-results-container">
                <% searchResults.results.forEach(item => { %>
                  <div class="search-result-item">
                    <img src="https://image.tmdb.org/t/p/w200<%= item.poster_path %>" alt="<%= item.title || item.name %> Poster">
                    <br>
                    <span class="search-result"><%= item.title || item.name %> (<%= item.release_date || item.first_air_date %>) [ID: <%= item.id %>]</span>
                    <br>
                    <span class="search-result">
                    Media Type: <%= searchResults.mediaType %>
                    </span>
                  </div>
                <% }) %>
              </div>
            <% } %>
            <h1 class = "title">Welcome to DAMovieList!</h1>
</body>
</html>